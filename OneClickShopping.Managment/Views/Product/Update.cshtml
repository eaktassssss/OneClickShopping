@using OneClickShopping.Application.Features.CQRS.Queries.Product.GetByIdProduct
@model GetByIdProductQueryResponse
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-body">
    <div class="title-header">
        <h5>Ürün Düzenleme</h5>
    </div>
    <div class="container-fluid">
        <div class="row">
            <form class="theme-form theme-form-2 mega-form" asp-action="Update" asp-controller="Product">
                <div class="col-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-header-2">
                                        <h5>Ürün Kaydı</h5>
                                    </div>
                                    <input asp-for="Id" type="hidden">
                                    <div class="row">
                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-sm-2 mb-0">
                                                Ürün İsmi
                                            </label>
                                            <div class="col-sm-10">
                                                <input class="form-control" asp-for="Name" type="text"
                                                       placeholder="Ürün İsmi">
                                            </div>
                                        </div>
                                        <div class="mb-4 row align-items-center">
                                            <label class="col-sm-2 col-form-label form-label-title">Kategori</label>
                                            <div class="col-sm-10">
                                                <select class="js-example-basic-single w-100" asp-for="CategoryId">
                                                    <option value="1">Electronics</option>
                                                    <option value=2>TV & Appliances</option>
                                                    <option value=3>Home & Furniture</option>

                                                </select>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-sm-2 mb-0">
                                                Fiyat
                                            </label>
                                            <div class="col-sm-10">
                                                <input class="form-control" asp-for="Price" type="text"
                                                       placeholder="Fiyat">
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-sm-2 mb-0">
                                                Miktar
                                            </label>
                                            <div class="col-sm-10">
                                                <input class="form-control" asp-for="CurrentQty" type="text"
                                                       placeholder="Miktar">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="card-header-2">
                                        <h5>Açıklama</h5>
                                    </div>


                                    <div class="row">
                                        <div class="mb-4 row align-items-center">
                                            <textarea asp-for="Description" rows=10></textarea>
                                        </div>
                                    </div>

                                </div>
                            </div>
